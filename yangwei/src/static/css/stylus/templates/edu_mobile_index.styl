.banner
    margin-bottom 0.5rem
    #tabPic
        height 6.25rem
        overflow hidden
        position relative
        /*width 100%*/
        #picList
            position relative
            width 400%
            height 6.25rem
            li
                width 25%
                height 100%
                float left
                img
                    height 100%
        .picMask
            position absolute
            left 0
            bottom 0
            width 100%
            nav
                position absolute
                right  0.75rem
                bottom  0.4rem
                /*height 0.5rem*/
                a
                    float left
                    width 0.5rem
                    height 0.5rem
                    border-radius 0.25rem
                    background #fff
                    opacity 0.5
                    margin-left 0.6rem
                a.active
                    background #ff6600
                    opacity 1


