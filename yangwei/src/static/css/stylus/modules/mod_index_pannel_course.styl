//@import 'nib'
.index_pannel
  margin-bottom 0.5rem
  background-color #fff
  .index_pannel_head
      height 1.75rem
      line-height 1.75rem
      h3
        float left

      .more
         float right
  .index_pannel_content
      overflow hidden
      width 100%
      .single_line_content

          ul:nth-child(1)
            padding-right 0.375rem
          ul:nth-child(2)
            padding-left 0.375rem
          ul
            width 50%
            float left
            box-sizing border-box
            .img_li
              width 7.25rem
              height 4.95rem
              position relative
              overflow hidden
              .course_logo
                  position absolute
                  transform  rotate(-45deg) translate(50%,50%)
                  width 100%
                  height 1rem
                  left 0
                  top 1.975rem
                  text-align center
              .course_logo_taocan
                  background-color red
            .desc
                line-height 1rem
                min-height 2rem
            .price_li
                height 1rem
